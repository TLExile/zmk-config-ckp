#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/backlight.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // ------------------------------------------------------------------------------------------
            // | ESC |  1  |  2  |  3  |  4  |  5  |  6  |  7  |  8  |  9  |  0  |  -  |  =  |BKSP | DEL |
            // | TAB  |  Q  |  W  |  E  |  R  |  T  |  Y  |  U  |  I  |  O  |  P  |  [  |  ]  |  |   |
            // | CAPS  |  A  |  S  |  D  |  F  |  G  |  H  |  J  |  K  |  L  |  ;  |  '  |     ENTER    |
            // |  SHIFT|NONE|  Z  |  X  |  C  |  V  |  B  |  N  |  M  |  ,  |  .  | /   | SHFT | UP | 1  |
            // |  CTL  |  WIN  |  ALT  |            SPACE              | ALT | CTRL | LEFT | DOWN | RIGHT |
            // ------------------------------------------------------------------------------------------

            bindings = <
  &kp ESC     &kp N1    &kp N2    &kp N3     &kp N4  &kp N5  &kp N6  &kp N7  &kp N8     &kp N9    &kp N0  &kp MINUS  &kp EQUAL  &kp BACKSPACE           &kp F13
  &kp TAB      &kp Q     &kp W     &kp E      &kp R   &kp T   &kp Y   &kp U   &kp I      &kp O     &kp P   &kp LBKT   &kp RBKT       &kp BSLH
 &kp CLCK      &kp A     &kp S     &kp D      &kp F   &kp G   &kp H   &kp J   &kp K      &kp L  &kp SEMI    &kp SQT    &kp RET
&kp LSHFT      &none     &kp Z     &kp X      &kp C   &kp V   &kp B   &kp N   &kp M  &kp COMMA   &kp DOT   &kp FSLH  &kp RSHFT          &none  &kp C_PLAY_PAUSE
           &kp LCTRL  &kp LGUI  &kp LALT  &kp SPACE   &mo 0   &mo 0   &mo 0   &mo 1      &none
            >;

            sensor-bindings =
                <&inc_dec_kp LC(TAB) LC(LS(TAB))>,
                <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        raise {
            bindings = <
      &kp GRAVE    &kp F1        &kp F2        &kp F3      &kp F4  &kp F5  &kp F6  &kp F7           &kp F8  &kp F9    &kp F10    &kp F11          &kp F12     &kp DEL     &kp F14
     &bl BL_TOG    &trans        &kp UP        &trans      &trans  &trans  &trans  &trans          &kp INS  &trans  &kp PSCRN   &kp SLCK  &kp PAUSE_BREAK  &sys_reset
&kp LOCKING_NUM  &kp LEFT      &kp DOWN     &kp RIGHT      &trans  &trans  &trans  &trans           &trans  &trans   &kp HOME  &kp PG_UP      &bootloader
          &none     &none  &kp C_VOL_DN  &kp C_VOL_UP  &kp C_MUTE  &trans  &trans  &trans           &trans  &trans     &trans     &trans          &kp END      &trans  &kp C_STOP
                   &trans    &bt BT_PRV    &bt BT_NXT      &trans  &trans  &trans  &trans  &rgb_ug RGB_TOG  &trans
            >;

            sensor-bindings =
                <&inc_dec_kp LC(RIGHT) LC(LEFT)>,
                <&inc_dec_kp LG(RIGHT) LG(LEFT_ARROW)>;
        };

        layer_2 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
        &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
            >;
        };
    };
};
